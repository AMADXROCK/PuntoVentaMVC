@model PuntoVentaMVC.Models.Productos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well">
        <div class="row">
            
            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Nombre: </label>
                    @Html.EditorFor(model => model.P_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.P_Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Descripcion: </label>
                    @Html.EditorFor(model => model.P_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.P_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Precio: </label>
                    @Html.EditorFor(model => model.P_Precio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.P_Precio, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-12 col-xs-12">
                <div class="btn-group">
                    <button type="submit" class="btn-success">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                    </button>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-danger">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                </div>
            </div>

        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
