@model IEnumerable<PuntoVentaMVC.Models.Productos>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<div class="well">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th></th>
                    <th></th>
                    <th align="center">ID</th>
                    <th align="center">Producto</th>
                    <th align="center">Descripcion</th>
                    <th align="center">Precio</th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="center">
                            <a href="@Url.Action("Edit", new { id=item.ID_Producto })" class="btn btn-warning">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Delete", new { id=item.ID_Producto })" class="btn btn-danger">
                                <i class="glyphicon glyphicon-minus"></i>
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID_Producto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.P_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.P_Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.P_Precio)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

