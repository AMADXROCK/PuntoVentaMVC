@model PuntoVentaMVC.Models.Ventas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="well">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Cantidad: </label>
                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Producto: </label>
                    @Html.DropDownList("Producto", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Total: </label>
                    @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-12 col-xs-12">
                <div class="btn-group">
                    <button type="submit" class="btn-success">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                    </button>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-danger">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                </div>
            </div>

        </div>

    </div>



   }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
