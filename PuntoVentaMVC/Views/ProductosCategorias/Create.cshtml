@model PuntoVentaMVC.Models.ProductosCategorias

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="well">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Producto: </label>
                    @Html.DropDownList("Producto", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="form-group">
                    <label for="usr"> Categoria: </label>
                    @Html.DropDownList("Categoria", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-12 col-xs-12">
                <div class="btn-group">
                    <button type="submit" class="btn-success">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                    </button>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-danger">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                </div>
            </div>

        </div>

    </div>


    <div class="form-horizontal">
        <h4>ProductosCategorias</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Producto, "Producto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Producto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Producto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Categoria, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Categoria", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
